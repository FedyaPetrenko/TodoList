@{
    ViewBag.Title = "AddTodoList";
}

<div class="row">
    <br/>
    <div class="col-md-4">
        @Html.Partial("_SearchToDoTask")
    </div>
    <div class="col-md-3 col-lg-offset-5">
        @Html.Partial("_SaveToFileInJson")
    </div>
</div>

<div class="row">
    <h2 class="col-lg-offset-5">Add Todo</h2>

    @Html.Partial("_CreateToDoTask")

    <div class="col-md-2"></div>

    @Html.Partial("_CreateProject")
</div>

<div id="tableDiv">
    @Html.Action("BuildToDoTasksTable")
</div>

@section Scripts{
    <script src="~/Scripts/AddTodo.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
