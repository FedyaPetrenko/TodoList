<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar-fixed-top"  id="nav_container">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-md-2">
                    @Html.ActionLink("TodoList", "Index", "ToDoTasks", new { area = "" }, new { @class = "navbar-brand", @style = "font-size:30px" })
                </div>
                <div class="col-md-5">
                    @Html.Partial("_SearchToDoTask")
                </div>
                <div class="navbar-collapse collapse col-md-5">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
        <footer class="navbar-fixed-bottom" id="nav_container">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Developed by Fedir Petrenko</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
